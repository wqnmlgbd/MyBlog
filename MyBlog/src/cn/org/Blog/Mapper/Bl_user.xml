<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="Bl_userMapper">
	<select id="selectbl_user" resultType="bl_user">
		select * from  bl_user
	</select>
	
	<insert id="addbl_user" parameterType="bl_user" >
		insert into bl_user (name,password)
		values (#{name},#{password})
	</insert>
	
	<update id="updatebl_user" parameterType="bl_user">
		update bl_user set name=#{name},password=#{password} where id=#{id}
	</update>
	
	<delete id="delbl_user" parameterType="bl_user">
		delete from bl_user where id=#{id}
	</delete>

</mapper>


